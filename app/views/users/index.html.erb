<p id="notice"><%= notice %></p>

<h3>Listing Users</h3>
<table class="table table-striped table-bordered" id="user">
  <thead>
    <tr>
      <th>email</th>
      <th>password</th>
       <th>Admin</th>
       <th>Sub Admin</th>
       <th>Client</th>
       <th>Con Detail Per</th>
       <th>Biz Tab Per</th>
       <th>Statutory Per</th>
       <th>Product Per</th>
       <th>Information per</th>
       <th>Website det per</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <% if user.admin==true %>
        <td><%="yes"%></td>
        <%else%>
        <td><%= "no"%></td>
        <%end%>
        
        <% if user.sub_admin==true %>
        <td><%="yes"%></td>
        <%else%>
        <td><%= "no"%></td>
        <%end%>
        
        <% if user.client==true %>
        <td><%="yes"%></td>
        <%else%>
        <td><%= "no"%></td>
        <%end%>
        
        <% if user.contact_person==true %>
        <td><%="given"%></td>
        <%else%>
        <td><%= "not given"%></td>
        <%end%>
        
         <% if user.biz_tab==true %>
        <td><%="given"%></td>
        <%else%>
        <td><%= "not given"%></td>
        <%end%>
        
         <% if user.statutory==true %>
        <td><%="given"%></td>
        <%else%>
        <td><%= "not given"%></td>
        <%end%>
        
        <% if user.product==true %>
        <td><%="given"%></td>
        <%else%>
        <td><%= "not given"%></td>
        <%end%>
        
         <% if user.web_site_detail==true %>
        <td><%="given"%></td>
        <%else%>
        <td><%= "not given"%></td>
        <%end%>
        
        <% if user.information==true %>
        <td><%="given"%></td>
        <%else%>
        <td><%= "not given"%></td>
        <%end%>
        <td><%= link_to 'Show', user %>
        <%= link_to 'Edit', edit_user_path(user) %>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'create user with role', new_user_path, class:"btn btn-info" %>
