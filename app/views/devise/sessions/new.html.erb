<head>
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<p class="notice" align="center"><%= notice %></p>
    <p class="alert" align="center"><%= alert %></p>
</head>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4" style="margin-top:200px;background-color:#FAFAFA;height:250px;">
			<div class="">
				<div class="panel-heading" align="center">
					<strong class="">Login</strong>
				</div>
				<br>
				<div>
					<%= form_for(resource, as: resource_name, url: session_path(resource_name),class:"form-horizontal") do |f| %>
					<div class="form-group">
						<label for="inputEmail3" class="col-sm-3 control-label">Email</label>
						<div class="col-sm-9">
							<%= f.email_field :email, autofocus: true, class: "form-control", placeholder:'Email', required: "Please enter your email address" %>
						</div></br></br>
					</div>
					<div class="form-group">
						<label for="inputPassword3" class="col-sm-3 control-label">Password</label>
						<div class="col-sm-9">
							<%= f.password_field :password, autocomplete: "off",class: "form-control", placeholder:'Password', required: "Please enter your password" %>
						</div>
					</div>
					<% if devise_mapping.rememberable? -%>
					<div class="form-group">
						<div class="col-sm-offset-3 col-sm-9">
							<div class="checkbox">
								<label class=""> <%= f.check_box :remember_me %>
									<%= f.label :remember_me %>
							</div>
						</div>
					</div>
					<%end%>
					<div class="form-group last">
						<div class="col-sm-offset-3 col-sm-9">
							<button type="reset" class="btn btn-danger">
								Clear
							</button>&nbsp;&nbsp;
							<%= f.submit "Log in",class:"btn btn-danger"%>

						</div>
					</div>
				</div>
				</form>
			</div>

		</div>
	</div>
</div>
</div>
<%end%>