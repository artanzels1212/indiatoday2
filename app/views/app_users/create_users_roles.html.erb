
<!DOCTYPE html>
<html lang="en">
<head>
<title></title>
</head>
<body>
<div class="container">
    <h2>Create User and Roles</h2>
    <%= form_tag create_users_roles_app_users_path, method: :get, :id=>"role" do %>	
    <div class="form-group">
    <label for="email">Email:</label>
    <%= text_field_tag 'email',nil,class: "form-control",:placeholder=>"email"%></div>
    <div class="form-group">
    <label for="pwd">Password:</label>
    <%= text_field_tag 'password',nil,class: "form-control",:placeholder=>"password"%></div>
    <div class="form-group">
    <label for="pwd">Role:</label>
    <%=select_tag "role", options_for_select(["sub_admin","client"],"Select")%>
    </div>
    <div class="form-group">
    <label for="pwd">Contact Person:</label>
    <%= check_box "contact_persons", "enabled", {}, "1", "0" %>
    </div>
    <div class="form-group">
    <label for="pwd">Biz Tabs:</label>
    <%= check_box "biz_tabs", "enabled", {}, "1", "0" %>
    </div>
    <div class="form-group">
    <label for="pwd">Statutory:</label>
    <%= check_box "statutory", "enabled", {}, "1", "0" %>
    </div>
     <div class="form-group">
    <label for="pwd">Product:</label>
    <%= check_box "product", "enabled", {}, "1", "0" %>
    </div>
    <div class="form-group">
    <label for="pwd">Website Details:</label>
    <%= check_box "website_details", "enabled", {}, "1", "0" %>
    </div>
    <div class="form-group">
    <label for="pwd">Information:</label>
    <%= check_box "information", "enabled", {}, "1", "0" %>
    </div><br>
    <%= submit_tag 'AssignRole',class:"btn btn-success", :id=>"btnrole"%>
    <%end%> 
</div>        
</body>
</html>
