<p id="notice"><%= notice %></p>

<h3 align="center">Listing Products</h3>
<table class="table table-striped table-bordered" id="products">
  <thead>
    <tr>
      <th>Add product</th>
      <th>Product name</th>
      <th>Approx price</th>
      <th>Min order quantity</th>
      <th>Unit type</th>
      <th>Product group</th>
      <th>Product desc</th>
      <th>Top 5</th>
      <th>Created by</th>
      <!-- <th>Updated by</th>
      <th>Deleted by</th>
      <th>User</th> -->
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.add_product %></td>
        <td><%= product.product_name %></td>
        <td><%= product.approx_price %></td>
        <td><%= product.min_order_quantity %></td>
        <td><%= product.unit_type %></td>
        <td><%= product.product_group %></td>
        <td><%= product.product_desc %></td>
        <td><%= product.top_5 %></td>
        <td><%= product.created_by %></td>
        <!-- <td><%= product.updated_by %></td>
        <td><%= product.deleted_by %></td>
        <td><%= product.user %></td> -->
        <td><%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

